        android:textAlignment="center"
        tools:ignore="HardcodedText,SpUsage" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        tools:ignore="RtlHardcoded,UseCompoundDrawables">
        <TextView
            android:text="25/12/2016\n07:00-12:00"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="18dp"
            tools:ignore="HardcodedText,SpUsage"
            android:textAllCaps="false"
            android:id="@+id/e2"
            android:clickable="true"
            android:textColor="@color/colorPrimary" />
        <TextView
            android:text="Natal para Todos 2016\nComunidade do Castanheiras\nTaquaril - Belo Horizonte"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="18dp"
            tools:ignore="HardcodedText,SpUsage" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        tools:ignore="RtlHardcoded,UseCompoundDrawables">
        <TextView
            android:text="30/12/2016\n23:00-03:30"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="18dp"
            tools:ignore="HardcodedText,SpUsage"
            android:textAllCaps="false"
            android:id="@+id/e1"
            android:clickable="true"
            android:textColor="@color/colorPrimary" />
        <TextView
            android:text="Madrugada de Carinho\nRua Violeta, 735\nPompÃ©ia, Belo Horizonte"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="18dp"
            tools:ignore="HardcodedText,SpUsage" />
    </LinearLayout>
    <Button
        android:text="Voltar"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        style="?android:textAppearanceSmall"
        android:id="@+id/voltar"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        tools:ignore="HardcodedText" />
</LinearLayout>